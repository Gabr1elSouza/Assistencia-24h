generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model InfoSeguro {
  id         String   @id @default(uuid())
  name       String   @unique
  CPF        String   @unique
  placa      String   @unique
  veiculo    String
  telefone   String
  vencimento String
  apolice    String   @unique
  renavam    String
  imagens    Imagem[] @relation("InfoSeguroImagens") // Relacionamento com a tabela de imagens

  @@map("infoSeguros")
}

model Imagem {
  id           Int        @id @default(autoincrement())
  nome         String
  imagem       Bytes
  infoSeguroId String
  infoSeguro   InfoSeguro @relation("InfoSeguroImagens", fields: [infoSeguroId], references: [id])

  @@map("imagens")
}
